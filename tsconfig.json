{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "lib": [ "es6" ],
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "rootDir": ".",
        "typeRoots":[
            "./node_modules/@types",
            "./typings"
        ],
        "types": ["node"]
    },
    "exclude": [
        "out",
        "node_modules",
        "src/views/htmlcontent"
    ]
}